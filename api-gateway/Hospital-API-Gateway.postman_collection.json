{
	"info": {
		"_postman_id": "hospital-gateway-collection",
		"name": "Hospital API Gateway",
		"description": "Collection pour tester l'API Gateway du projet Hospital Microservices",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "gateway_url",
			"value": "http://localhost:8080",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health Check",
			"item": [
				{
					"name": "Gateway Health",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{gateway_url}}/actuator/health",
							"host": ["{{gateway_url}}"],
							"path": ["actuator", "health"]
						}
					}
				},
				{
					"name": "Gateway Routes",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{gateway_url}}/actuator/gateway/routes",
							"host": ["{{gateway_url}}"],
							"path": ["actuator", "gateway", "routes"]
						}
					}
				}
			]
		},
		{
			"name": "Patient Service",
			"item": [
				{
					"name": "Get All Patients",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{gateway_url}}/api/patients",
							"host": ["{{gateway_url}}"],
							"path": ["api", "patients"]
						}
					}
				},
				{
					"name": "Get Patient by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{gateway_url}}/api/patients/1",
							"host": ["{{gateway_url}}"],
							"path": ["api", "patients", "1"]
						}
					}
				},
				{
					"name": "Create Patient",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Jean Dupont\",\n  \"email\": \"jean.dupont@email.com\",\n  \"phone\": \"0612345678\",\n  \"address\": \"10 Rue de la Santé, Paris\"\n}"
						},
						"url": {
							"raw": "{{gateway_url}}/api/patients",
							"host": ["{{gateway_url}}"],
							"path": ["api", "patients"]
						}
					}
				}
			]
		},
		{
			"name": "Appointment Service",
			"item": [
				{
					"name": "Get All Appointments",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{gateway_url}}/api/appointments",
							"host": ["{{gateway_url}}"],
							"path": ["api", "appointments"]
						}
					}
				},
				{
					"name": "Create Appointment",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"patientName\": \"Jean Dupont\",\n  \"doctorName\": \"Dr. Martin\",\n  \"appointmentDate\": \"2025-12-30T10:00:00\",\n  \"reason\": \"Consultation générale\"\n}"
						},
						"url": {
							"raw": "{{gateway_url}}/api/appointments",
							"host": ["{{gateway_url}}"],
							"path": ["api", "appointments"]
						}
					}
				}
			]
		},
		{
			"name": "Billing Service",
			"item": [
				{
					"name": "Get All Bills",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{gateway_url}}/api/bills",
							"host": ["{{gateway_url}}"],
							"path": ["api", "bills"]
						}
					}
				}
			]
		},
		{
			"name": "Notification Service",
			"item": [
				{
					"name": "Get All Notifications",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{gateway_url}}/api/notifications",
							"host": ["{{gateway_url}}"],
							"path": ["api", "notifications"]
						}
					}
				}
			]
		}
	]
}
